<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageMusic"
        android:src="@drawable/music_bg"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp">

        <TextView
            android:id="@+id/startDur"
            android:text="00:00"
            android:gravity="center"
            android:layout_toLeftOf="@id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_centerInParent="true"
            android:progressTint="@color/colorPrimary"
            android:layout_width="@dimen/_225sdp"
            android:layout_height="@dimen/_30sdp" />

        <TextView
            android:id="@+id/endDur"
            android:text="00:00"
            android:gravity="center"
            android:layout_toRightOf="@id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <TextView
        android:id="@+id/musicTitle"
        android:text="Ready set Go"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/musicAuthor"
        android:text="Royal Tailor"
        android:textSize="@dimen/_10ssp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnRepeat"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/btnStart"
            android:layout_marginRight="@dimen/_70sdp"
            android:src="@drawable/ic_repeat"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/btnStart"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_button"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/btnShare"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/btnStart"
            android:layout_marginLeft="@dimen/_70sdp"
            android:src="@drawable/ic_share"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>